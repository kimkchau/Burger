<div class="jumbotron">
    <h1 class="text-center"><span class="fa fa-fire"></span> Burgers!</h2>
    <h4 class="text-center">Click on the buttons to eat a burger or make your own!</h4>
    <br>
  </div>

<div class="container">
  <div class="row">
    <div class="col py-3 px-lg-5 border bg-light">

      <h2>Eat da Burger!</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>



    <div class="col py-3 px-lg-5 border bg-light">
      <h2>Burgers that are devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


  <br>

  <div class="row">
    <div class="col py-3 px-lg-5 border bg-light">
      <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <div class="form-group">
          <label for="burger">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Not devoured
        </div>

        <button class="btn btn-secondary btn-sm" type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>